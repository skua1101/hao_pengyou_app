<div class="main-container">
<div class="row mt-4">
    <section class="new-items col-md-12">
      <h3><strong>All Event</strong></h3>
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-3">
            <div class="card border border-2">
                <%= image_tag event.image.variant(resize_to_fill: [450, 250])%>
              <div class="card-body">
                <h6 class="card-title"><strong><%= link_to event.event_name, event_path(event) %></strong></h6>
                <p class="card-text"><%= event.date %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>