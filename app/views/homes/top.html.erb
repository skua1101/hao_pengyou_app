<div class="main-container">
  <div class="row">
    <div class='col-md-12'>
      <section class="main-visual mt-4">
        <div class="mv-text">
          <h1 class=text-center style="color: white;"> Welcome to HaoPengYou <i></i></h1>
           <h6 class=text-center style="color: white;">
            興味のあるイベントをクリックしてイベントに参加しよう！！<br />
            ※開催日時・開催場所をご確認のうえご予約をお願い致します
           </h6>
        </div>
      </section>
    </div>
  </div>

  <!--新着イベント-->
  <div class="row mt-4">
    <section class="new-items col-md-12" style= "padding: 50px 80px 30px">
      <h3 style="color: white;"><strong>New Event</strong></h3>
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-3">
            <div class="card border border-2" style = "padding: 10px; margin: 10px;">
                <%= image_tag event.image.variant(resize_to_fill: [450, 250])%>
              <div class="card-body">
                <h6 class="card-title"><strong><%= link_to event.event_name, event_path(event) %></strong></h6>
                <p class="card-text">開催日：<%= event.event_date.strftime('%Y/%m/%d %H:%M~') %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
  <div class="col-md-12 text-right" style="padding-bottom: 40px;">
    <%= link_to "全てのイベントを見る>", events_path %>
  </div>
</div>