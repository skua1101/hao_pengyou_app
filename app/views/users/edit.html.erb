<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="col-md-2" style="background-color: #eeeeee; display: inline-block; padding:0 20px; font-weight: bold; margin:50px 0;" >会員情報編集</h4>

      <%= form_with model: @user,url: user_path, local:true do |f| %>

        <div class="form_group" style="display: flex">
          <div class="col-md-2">氏名</div>
          <div class="col-md-2"><%=f.text_field :last_name %></div>
          <div class="col-md-2"><%=f.text_field :first_name %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-2">フリガナ</div>
          <div class="col-md-2"><%=f.text_field :last_name_kana %></div>
          <div class="col-md-2"><%=f.text_field :first_name_kana %></div>
        </div>

        <div class="form-group" style="display: flex">
          <div class="col-md-2"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-md-2"><%= f.email_field :email %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-2"><%=f.label :nationality, "国籍" %></div>
          <div class="col-md-2"><%=f.text_field :nationality %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-2"><%=f.label :post_code, "郵便番号" %></div>
          <div class="col-md-2"><%=f.text_field :post_code %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-2"><%=f.label :address, "住所" %></div>
          <div class="col-md-2"><%=f.text_field :address %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-2"><%=f.label :phone_number, "電話番号" %></div>
          <div class="col-md-2"><%=f.text_field :phone_number %></div>
        </div>

        <div  class="form-group" style="display: flex">
          <div class="col-md-3 offset-md-2"><%= f.submit "      変更を保存      ", class: "btn btn-success" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>