<table class="table table-sm">
  <thead>

    <th>name</th>
    <th colspan="4"></th>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= user.last_name %> <%= user.first_name %></td>
      <td>フォロー数：<%= user.active_relationships.count %></td>
      <td>フォロワー数：<%= user.passive_relationships.count %></td>
      <td style="border:none;">
          <% if user.followed_by?(current_user) %>
            <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-primary" %>
          <% else %>
              <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success" %>
          <% end %>
      </td>
      <td><%= link_to "Show", "/users/#{user.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>